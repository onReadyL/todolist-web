{
	"extends": ["react-app", "plugin:jsx-a11y/recommended"],
	"plugins": ["jsx-a11y", "prettier"],
	"env": {
		"browser": true,
		"es6": true
	},
	"rules": {
		"prettier/prettier": 1, //  eslint-plugin-prettier 使用prettier作为eslint规则
		"react-hooks/rules-of-hooks": 2,
		"react-hooks/exhaustive-deps": 2,
		"import/no-webpack-loader-syntax": 0,
		"no-multi-spaces": 1,
		"no-multiple-empty-lines": "warn",
		"no-trailing-spaces": "warn",
		"react/jsx-tag-spacing": 2, // 总是在自动关闭的标签前加一个空格，正常情况下也不需要换行
		"jsx-quotes": 2, // 强制在 JSX 属性中使用一致的单引号或双引号
		// "react/jsx-closing-bracket-location": 2,    // 遵循JSX语法缩进/格式
		"react/jsx-boolean-value": 2, // 如果属性值为 true, 可以直接省略
		"react/no-string-refs": 2, // 总是在Refs里使用回调函数
		"react/self-closing-comp": 2, // 对于没有子元素的标签来说总是自己关闭标签
		"react/sort-comp": 2, // 按照具体规范的React.createClass 的生命周期函数书写代码
		"react/jsx-pascal-case": 2, // React模块名使用帕斯卡命名，实例使用骆驼式命名
		"no-console": "warn", // 避免生产环境的console
		"strict": 0,
		"no-useless-escape": 1,
		"prefer-const": [
			"error",
			{
				"destructuring": "all",
				"ignoreReadBeforeAssign": false
			}
		]
	}
}
